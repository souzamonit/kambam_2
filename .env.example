# Configurações do Banco de Dados MariaDB
DB_HOST=localhost
DB_PORT=3306
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=kanban_solicitacoes

# Configurações da Aplicação (apenas para desenvolvimento local)
NODE_ENV=development
PORT=3000

# Chave para JWT (se implementado)
JWT_SECRET=sua_chave_secreta_muito_forte

# Configurações do Telegram Bot (prefixo VITE_ necessário para acesso no frontend)
VITE_TELEGRAM_BOT_TOKEN=
VITE_TELEGRAM_CHAT_ID=

# IMPORTANTE: Para produção no Netlify, apenas variáveis com prefixo VITE_ são acessíveis
# As variáveis de banco de dados (DB_*) são apenas para desenvolvimento local com servidor Node.js
# No Netlify, o sistema usa LocalStorage automaticamente